@section Scripts
    {
    <script>
        //$('video, audio').mediaelementplayer();
        // Get the video
        var video = document.getElementById("myVideo");

        // Get the button
        var btn = document.getElementById("btnplay");

        // Pause and play the video, and change the button text
        function myFunction() {
            if (video.paused) {
                video.play();
                //btn.innerHTML = "Pause";
                btn.style.display = "none";
            } else {
                video.pause();
                btn.innerHTML = "Play";
            }
        }
    </script>

