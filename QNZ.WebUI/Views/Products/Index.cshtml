@model ProductPageVM

@{
    var pageMeta = (PageMeta)ViewData["PageMeta"];
    ViewData["Title"] = pageMeta != null ? pageMeta.Title : "产品中心";
}
@section Header{
    @if (pageMeta != null)
    {
        <meta name="keywords" content="@pageMeta.Keywords">
        <meta name="description" content="@pageMeta.Description">
    }  

}

<div class="banner banner-about">
    <img src="/assets/img/temp/banner-product.jpg" alt="产品中心">
    <div class="txt">
        <div class="container">
            <h1>产品中心</h1>
        </div>
    </div>
</div>

<div class="page page-products">
    <section class="s1 container">
        <div class="submenu">
            @foreach (var item in Model.Categories)
            {
                <a class="@(Model.CategoryId == item.Id?"active":"")" asp-action="Index" asp-route-cid="@item.Id">@item.Title</a>
            }

