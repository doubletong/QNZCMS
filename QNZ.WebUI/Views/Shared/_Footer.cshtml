
<footer class="site-footer" id="pagefooter">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-auto">
                <div class="logo"><img src="/assets/img/logo_bot.png" alt=""></div>
            </div>
            <div class="col-md">
                @await Component.InvokeAsync("SiteNav", new { categoryId = 2 })

            </div>
            <div class="col-md-auto">
                @await Component.InvokeAsync("SocialApp")
            </div>
        </div>
    </div>
    <div class="bot">
        <ul class="contact">
            <li>联系电话：@SettingsManager.Company.Phone</li>
            <li>邮箱：@SettingsManager.Company.Email</li>
            <li>地址：@SettingsManager.Company.Address</li>
        </ul>
        <p class="copyright">Copyright 2015-@DateTime.Now.Year &copy; @SettingsManager.Company.Name  <a href="http://www.beian.miit.gov.cn/">@SettingsManager.Site.WebNumber</a></p>
    </div>
</footer>
