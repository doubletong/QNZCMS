<!DOCTYPE html>
<html lang="zh-CN" >
<head>
    <meta charset=utf-8>
    <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/admin/fonts/iconfont.css" rel="stylesheet" />
    <link href="~/admin/css/main.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @RenderSection("header", required: false)
</head>
<body>



    <div id="wrapper" class="wrapper">
        @await Component.InvokeAsync("LeftNav", new { categoryId = SettingsManager.Menu.BackMenuCId, viewContext = ViewContext })
        <div id="rightcol" class="rightcol">
            <header class="page-header">
                <div class="row align-items-center">
                    <div class="col-auto">
                        <div class="closemenu" id="closemenu">
                            <div class="link_item up"></div>
                            <div class="link_item"></div>
                            <div class="link_item bot"></div>
                        </div>

                    </div>
                    <div class="col">
                        <ul class="nav-user">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li>
                                    您好，@User.Identity.Name
                                </li>
                                <li>
                                    <a  asp-controller="Account" asp-action="Logout" asp-route-area=""><i class="fa fa-sign-out"></i> 退出系统</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
              
               
          
            </header>

         

            <div class="main-content">
                @await Component.InvokeAsync("Crumbs", new { viewContext = ViewContext })
                @RenderBody()
            </div>

            <partial href="_footer" />
           

        </div>
    </div>


    <script src="~/admin/js/jquery-3.2.1.min.js"></script>
    <script src="~/admin/js/sweetalert.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/App.js"></script>

    @RenderSection("footer", required: false)
</body>
</html>
