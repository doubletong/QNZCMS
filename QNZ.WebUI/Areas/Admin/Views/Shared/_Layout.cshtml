<!DOCTYPE html>
<html lang="zh-CN" >
<head>
    <meta charset=utf-8>
    <meta http-equiv=X-UA-Compatible content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="~/admin/fonts/iconfont.css" rel="stylesheet" />
    <link href="~/admin/css/styles.min.css" rel="stylesheet" />
    <link href="~/admin/css/patch.min.css" rel="stylesheet" />
    <link href="~/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @RenderSection("header", required: false)
</head>
<body>
    <div class="wrapper" id="wrapper">
        <aside class="leftcol" id="leftcol">
            <div class="logo"><a asp-action="Index" asp-controller="Home" asp-area="Admin"><img src="@SettingsManager.Site.DashboardLogo" alt="logo" /></a></div>

            @await Component.InvokeAsync("LeftNav", new { categoryId = SettingsManager.Menu.BackMenuCId, viewContext = ViewContext })
        </aside>

            <section class="rightcol" id="rightcol">
                <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-primary">
                    <a class="navbar-brand" id="openav" href="javascript:void(0);"><i class="iconfont icon-menu"></i></a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">内容 <span class="sr-only">(current)</span></a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="General" asp-action="Index">系统</a></li>
                            <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Advertisements" asp-action="Index" >组件</a></li>
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <ul class="navbar-nav navbar-right">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">你好，@User.Identity.Name</a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">修改密码</a><a class="dropdown-item" href="#">Another action</a>
                                        <div class="dropdown-divider"></div><a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logout" asp-area=""><i class="iconfont icon-logout"></i> 退出系统</a>
                                </li>
                            </ul>
                        }
                    </div>
                </nav>




                <div class="main-content">
                    @await Component.InvokeAsync("Crumbs", new { categoryId =1, viewContext = ViewContext })
                    @RenderBody()
                </div>

                <partial name="_footer" />


            </section>
    </div>


    <script src="~/js/lib/jquery/jquery.min.js"></script>
    <script src="~/js/lib/sweetalert.min.js"></script>
    <script src="~/plugins/toastr/toastr.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/js/App.min.js"></script>

    @RenderSection("footer", required: false)
</body>
</html>
