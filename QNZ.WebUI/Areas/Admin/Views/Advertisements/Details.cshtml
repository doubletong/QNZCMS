@model QNZ.Data.Advertisement

@{
    ViewData["Title"] = Model.Title;
}

    <div class="card">
        <h5 class="card-header">
            @Model.Title
        </h5>
        <div class="card-body">

            <dl class="row">
                <dt class="col-sm-2">
                    主题
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    广告位
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Space.Title)
                </dd>
                <dt class="col-sm-2">
                    描述
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    链接
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.WebLink)
                </dd>
                <dt class="col-sm-2">
                    图片
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageUrl)
                </dd>
                <dt class="col-sm-2">
                    图片（手机）
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ImageUrlMobile)
                </dd>
                <dt class="col-sm-2">
                    排序
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Importance)
                </dd>
                <dt class="col-sm-2">
                    激活
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Active)
                </dd>
                <dt class="col-sm-2">
                    创建者
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>
                <dt class="col-sm-2">
                    创建时间
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
                <dt class="col-sm-2">
                    修改人
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedBy)
                </dd>
                <dt class="col-sm-2">
                    修改时间
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UpdatedDate)
                </dd>

            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary"><i class="fa fa-edit"></i> 编辑</a>
            <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa fa-angle-left"></i> 返回</a>
        </div>

    </div>


